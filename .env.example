# Server Configuration
PORT=8080

# MongoDB Configuration (used by Prisma and session store)
DATABASE_URL="mongodb://localhost:27017/naratama-library"

# For MongoDB Atlas (replace with your connection string):
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/naratama-library?retryWrites=true&w=majority"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-change-this-in-production-256-bit-minimum"

# Cookie Domain (optional, for cross-subdomain sessions)
# Leave empty for same-origin, or set to ".yourdomain.com" for subdomain sharing
COOKIE_DOMAIN=

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8080/api/auth/google/callback"

# SMTP Configuration for Email Verification
# For Gmail: use "smtp.gmail.com" as host, 587 as port
# For other providers, use their SMTP server details
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password-here"
# Note: For Gmail, use an App Password instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords
# SMTP_PASSWORD should be the 16-character app password (without spaces)

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development